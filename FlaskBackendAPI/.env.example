# Flask server config
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=3001

# API key for protected routes (set to a strong value in production)
API_KEY=change-me

# MongoDB connection
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=device_inventory
MONGODB_COLLECTION_DEVICES=devices
MONGODB_COLLECTION_LOGS=logs

# Features
PYTHONPING_ENABLED=false
# Optional rate limit format example: "100 per minute"
RATE_LIMIT=
# CORS origins: comma-separated list or "*" for all
CORS_ALLOWED_ORIGINS=*
