# Flask Backend API environment variables
# Copy this file to .env and set values accordingly.

# API key expected from frontend clients in header X-API-KEY. Leave blank to disable auth.
API_KEY=

# MongoDB connection string. Default documented MongoDB port is 5001.
# Example local Mongo (no auth): mongodb://localhost:5001
# Example with dbname: mongodb://localhost:5001/device_inventory
MONGODB_URI=mongodb://localhost:5001

# Database and collection names
MONGODB_DB_NAME=device_inventory
MONGODB_COLLECTION_DEVICES=devices
MONGODB_COLLECTION_LOGS=logs

# Optional: Enable pythonping usage for device reachability (true/false)
PYTHONPING_ENABLED=true

# Flask dev server port. Documented as 3001 to match frontend configuration.
FLASK_RUN_PORT=3001

# CORS allowed origins (comma-separated). Include React origin (http://localhost:3000) for local dev.
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Notes:
# - Start order: MongoDB (5001) -> Flask Backend (3001) -> React Frontend (3000).
# - Ensure MONGODB_URI points to the running MongoDB instance.
# - If API_KEY is set, the frontend must set REACT_APP_API_KEY with the same value.
