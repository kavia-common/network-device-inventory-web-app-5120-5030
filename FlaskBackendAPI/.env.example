# PUBLIC_INTERFACE
# Flask Backend API environment variables

# Service
FLASK_ENV=development
FLASK_DEBUG=1
PORT=3001
APP_VERSION=0.1.0
SECRET_KEY=dev-insecure-change-me

# CORS: comma-separated origins (e.g., http://localhost:3000)
CORS_ALLOW_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=DEBUG

# MongoDB connection
# Example for local secured MongoDB:
# mongodb://root:example@localhost:27017/inventory?authSource=admin
MONGODB_URI=
MONGODB_DB_NAME=inventory
MONGODB_COLLECTION_DEVICES=devices
MONGODB_COLLECTION_LOGS=logs

# Optional TLS and tuning
MONGODB_TLS=false
MONGODB_TLS_CA_FILE=
MONGODB_CONNECT_TIMEOUT_MS=10000
MONGODB_SOCKET_TIMEOUT_MS=20000
MONGODB_MAX_POOL_SIZE=100

# Feature flags
ENABLE_PING=true
PING_TIMEOUT_MS=1000
PING_COUNT=1
PING_CONCURRENCY=5
