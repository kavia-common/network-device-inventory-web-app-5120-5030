# Flask
FLASK_ENV=development
FLASK_DEBUG=1
PORT=5000
APP_VERSION=0.1.0
# IMPORTANT: Replace in non-dev
SECRET_KEY=dev-insecure-change-me

# CORS
# For Vite dev server default origin
CORS_ALLOW_ORIGINS=http://localhost:5173

# MongoDB (optional for health; required for CRUD once implemented)
# Example local secured Mongo:
# MONGODB_URI=mongodb://root:example@localhost:27017/inventory?authSource=admin
MONGODB_URI=
MONGODB_DB_NAME=inventory
MONGODB_COLLECTION_DEVICES=devices
MONGODB_COLLECTION_LOGS=logs
